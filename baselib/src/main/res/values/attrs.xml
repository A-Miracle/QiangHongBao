<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="RoundedImageView">
        <attr name="roundRadius" format="dimension" />
        <attr name="roundRadiusLeftTop" format="dimension" />
        <attr name="roundRadiusRightTop" format="dimension" />
        <attr name="roundRadiusRightBottom" format="dimension" />
        <attr name="roundRadiusLeftBottom" format="dimension" />
        <attr name="roundRadiusIsCircle" format="boolean" />
    </declare-styleable>
    <declare-styleable name="BorderImageView">
        <attr name="borderColor" format="color" />
        <attr name="borderSize" format="dimension" />
    </declare-styleable>

    <declare-styleable name="TagImageView">
        <attr name="tagOrientation" format="enum">
            <enum name="left_top" value="0" />
            <enum name="right_top" value="1" />
            <enum name="right_bottom" value="2" />
            <enum name="left_bottom" value="3" />
        </attr>
        <attr name="tagBackgroundColor" format="color"/>
        <attr name="tagCornerDistance" format="dimension"/>
        <attr name="tagWidth" format="dimension"/>
        <attr name="tagText" format="string"/>
        <attr name="tagTextSize" format="dimension"/>
        <attr name="tagTextColor" format="color"/>
        <attr name="tagEnable" format="boolean"/>
        <attr name="tagTextDownX" format="dimension"/>
        <attr name="tagTextRotate" format="integer"/>
    </declare-styleable>

    <declare-styleable name="RotateImageView" >
        <attr name="rotateDegree" format="integer"/>
        <attr name="rotateRate" format="integer"/>
        <attr name="rotateDirection" format="enum">
            <enum name="clockwise" value="1" />
            <enum name="counterclockwise" value="-1" />
        </attr>
    </declare-styleable>

    <declare-styleable name="BorderCircleView">
        <attr name="borderWidth" format="dimension" />
        <attr name="borderCircleColor" format="color" />
        <attr name="backgroundColor" format="color" />
    </declare-styleable>

    <declare-styleable name="RatioImageView">
        <attr name="ratio_w_h" format="float"/>
    </declare-styleable>
</resources>